<Window x:Class="CompanyManager.View.StartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:CompanyManager.View" 
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Title="Главное меню" Height="300" Width="350">
    <Grid Background="Gray">
        <StackPanel HorizontalAlignment="Center"
                    VerticalAlignment="Center">
            <Button Content="Организации"
                    FontSize="20"
                    Margin="10"/>
            <Button Content="Сотрудники" 
                    FontSize="20"
                    Margin="10"
                    Command="{Binding Path=NavigateEmployeesCommand}"/>
            <Button Content="Лог" 
                    FontSize="20"
                    Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
